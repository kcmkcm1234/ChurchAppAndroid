<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_family_units_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_bg_full"
    tools:context="com.tech.thrithvam.churchapp.FamilyUnitsDetails">

    <TextView
        android:text="Family Unit Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/family_units_name_head"
        android:layout_margin="15dp"
        android:textSize="22sp"
        android:textColor="@android:color/white"/>


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/itemsLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:indicator="BallTrianglePath"
        app:indicator_color="@color/white_patch"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/family_list"
        android:background="@drawable/white_transparent_card"
        android:layout_below="@+id/family_units_name_head"
        android:divider="@color/secondary_text"
        android:dividerHeight="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_above="@+id/cardView" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/family_units_list"
        android:layout_alignEnd="@+id/family_units_list">
        <TextView
            android:text="Unit Executives "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/family_units_executives"
            android:layout_margin="15dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
    </android.support.v7.widget.CardView>


</RelativeLayout>
