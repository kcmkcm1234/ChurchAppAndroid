<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/white_transparent_card">

        <ImageView
            android:id="@+id/events_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/church" />

        <TextView
            android:id="@+id/events_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/events_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Events Head"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/events_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/events_image"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="Response"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/events_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/events_image"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="Date"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
