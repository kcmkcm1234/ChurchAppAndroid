<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extra_detail_layout"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/white_transperent_card"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patron Name"
            android:layout_marginTop="5dp"
            android:id="@+id/patron_name"
            android:layout_toRightOf="@+id/detail_image1"
            android:layout_toEndOf="@+id/detail_image1"
            android:layout_toLeftOf="@+id/detail_image2"
            android:layout_toStartOf="@+id/detail_image2"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/detail_image1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/priest"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/detail_image2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/priest"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, pro ea autem paulo. Cu justo labore expetenda"
            android:id="@+id/patron_description"
            android:layout_below="@id/patron_name"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/detail_image1"
            android:layout_toEndOf="@+id/detail_image1"
            android:layout_toLeftOf="@+id/detail_image2"
            android:layout_toStartOf="@+id/detail_image2"
            />

    </RelativeLayout>
</LinearLayout>