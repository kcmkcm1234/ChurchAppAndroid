<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.thrithvam.churchapp.Home"
    android:background="@drawable/sky_bg_full">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dove"
            android:id="@+id/dove_image"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dove_image"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_name_area"
            >
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/app_name"
            android:layout_toStartOf="@+id/app_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/app_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="28sp"
                    android:textStyle="normal|bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/app_name"
                android:layout_toEndOf="@+id/app_name" />
        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/notification"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:id="@+id/notification"
            android:onClick="notification"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/info"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:id="@+id/info"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_area"
        android:layout_marginTop="40dp"
        android:background="@color/white_patch"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Search:"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="7dp"
            android:id="@+id/search_label" />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/searchView"
            android:queryHint="Search"
            android:padding="10dp"
            android:textColorHint="@color/edit_text"
            android:maxLength="100"
            android:textColor="@color/edit_text"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/search_label"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/search_label"
            android:selectAllOnFocus="true"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/church"
            android:id="@+id/searchImage"
            android:layout_alignTop="@+id/searchView"
            android:layout_alignRight="@+id/searchView"
            android:layout_alignEnd="@+id/searchView"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_alignBottom="@+id/searchView" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:id="@+id/my_n_near_church"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:onClick="mychurch"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/mychurch"
                android:id="@+id/icon1"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/icon1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mychurch"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="@string/my_church"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="novenas"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
            android:src="@drawable/novenas"
            android:id="@+id/icon2"
            android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/icon2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/novenasText"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="@string/novenas"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="view_all_towns">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/towns"
                android:id="@+id/icon3"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/icon3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/towns"
                android:id="@+id/view_all_towns"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="nearby_church">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/nearbychurch"
                android:id="@+id/icon4"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/icon4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nearbychurch"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="@string/nearby"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
