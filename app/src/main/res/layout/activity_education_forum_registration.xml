<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_church"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.thrithvam.churchapp.MyChurch"
    android:background="@drawable/sky_bg_full">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/itemsLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        app:indicator="BallTrianglePath"
        app:indicator_color="@color/white_patch"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="@string/education_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/activity_head"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/edu_forum_image"
        android:layout_toStartOf="@+id/edu_forum_image" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/edu_forum"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:id="@+id/edu_forum_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_head"
        android:id="@+id/about_edu_forum_scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:id="@+id/about"
                    android:textColor="@color/primary_text"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/white_transparent_card"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Register as a parent"
                    android:gravity="center"
                    android:id="@+id/register_p"
                    android:textColor="@color/colorAccent"
                    android:padding="10dp"
                    android:background="@drawable/white_transparent_card"
                    android:layout_margin="2dp"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Register as a student"
                    android:gravity="center"
                    android:id="@+id/register_s"
                    android:textColor="@color/colorAccent"
                    android:padding="10dp"
                    android:background="@drawable/white_transparent_card"
                    android:layout_margin="2dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    </RelativeLayout>
