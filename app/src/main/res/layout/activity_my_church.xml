<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_church"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.thrithvam.churchapp.MyChurch"
    android:background="@drawable/sky_bg_full">
    <TextView
        android:text="@string/my_church"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/activity_head"
        android:layout_margin="15dp"
        android:textSize="22sp"
        android:textColor="@android:color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/my_church_sample"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_below="@+id/activity_head"
        android:id="@+id/my_church_image"
        android:scaleType="centerCrop"/>
    <TextView
        android:text="@string/church_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/church_name"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/my_church_image"
        android:layout_alignLeft="@+id/my_church_image"
        android:layout_alignStart="@+id/my_church_image"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:text="Brief description about the church"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/church_detail1"
        android:layout_below="@+id/my_church_image"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Address and contact information of the church"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/church_detail2"
        android:layout_below="@id/church_detail1"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/church_detail2"
        android:layout_above="@+id/change_mychurch"
        android:layout_marginTop="10dp">
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                android:onClick="notice_click">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/gallery"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gallery"
                    android:textSize="16sp"
                    android:textColor="#795548"
                    android:layout_centerVertical="true"
                    android:text="@string/gallery"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />
                </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                android:onClick="events_click">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/events"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageevent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/events"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="#00BCD4"
                    android:text="@string/events"
                    android:layout_toRightOf="@+id/imageevent"
                    android:layout_toEndOf="@+id/imageevent" />
                    </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="family_units_click">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/family"
                        android:layout_centerVertical="true"
                        android:id="@+id/imagefamily" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/family_units"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="#E91E63"
                    android:text="@string/family_units"
                    android:layout_toRightOf="@+id/imagefamily"
                    android:layout_toEndOf="@+id/imagefamily" />
                    </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                android:onClick="gallery_click">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/edu_forum"
                        android:tint="#673AB7"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_edu_forum" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_edu_forum"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#673AB7"
                    android:layout_centerVertical="true"
                    android:text="@string/education_forum"
                    android:layout_toRightOf="@+id/image_edu_forum"
                    android:layout_toEndOf="@+id/image_edu_forum" />
                    </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                android:onClick="timings_click">
            <RelativeLayout
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/timings"
                        android:layout_centerVertical="true"
                        android:id="@+id/imagetiming" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timings"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="#8BC34A"
                    android:text="@string/mass_timings"
                    android:layout_toRightOf="@+id/imagetiming"
                    android:layout_toEndOf="@+id/imagetiming" />
                    </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardElevation="3dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                android:onClick="about_click">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/church"
                        android:layout_centerVertical="true"
                        android:id="@+id/imageabout" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#607D8B"
                    android:layout_centerVertical="true"
                    android:text="@string/about"
                    android:layout_toRightOf="@+id/imageabout"
                    android:layout_toEndOf="@+id/imageabout" />
                    </RelativeLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>
    <TextView
        android:text="@string/change_my_church"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_mychurch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp"
        android:textSize="12sp"
        android:textColor="@color/white_patch"
        android:onClick="change_my_church_click"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="#543b7d"
        fab:menu_colorRipple="#ffffff"
        fab:menu_fab_label=""
        fab:menu_fab_size="mini"
        fab:menu_icon="@drawable/left_arrow"
        fab:menu_labels_colorNormal="#fff"
        fab:menu_labels_colorPressed="#2e2248"
        fab:menu_labels_colorRipple="#ffffff"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#8d62d8"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="down"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noticewhite"
            fab:fab_label="@string/notices"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="notice_click"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallerywhite"
            fab:fab_label="@string/gallery"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="notice_click"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eventswhite"
            fab:fab_label="@string/events"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="notice_click"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/familywhite"
            fab:fab_label="@string/family_units"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="notice_click"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/institutions"
            fab:fab_label="@string/institutions"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="institutions_click"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pious_org"
            fab:fab_label="@string/pious_org"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="pious_org_click"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/novenas_saint"
            fab:fab_label="@string/novenas"
            fab:fab_size="mini"
            fab:fab_colorNormal="#8d62d8"
            fab:fab_colorPressed="#2e2248"
            android:onClick="novenas_click"/>


    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
